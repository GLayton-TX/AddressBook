@{
    ViewData["Title"] = "Home Page";
}

    <main class="flex-shrink-0">
        <div class="container col-xxl-8 px-4 py-5">
            <div class="row g-5 py-5" row-cols-1 row-cols-lg-2>
                <div class="col order-last order-lg-first ">
                    <h1 class="display-4 border border-4 rounded-pill text-center lh-1 logoBG"><span class="logoFont">Address Book</span></h1>
                    <h3 class="mb-3">An ASP.Net Project</h3>
                    <h4 class="lead">Display numbers between 1 to 100.
                        For every multiple of 3 display "Fizz" instead of the number.
                        For every multiple of 5 display "Buzz" instead of the number.
                        For every multiple of 15 display both, making "FizzBuzz".</h4>
                    <ul class="fa-ul pt-2 checklist">
                        <li><span class="fa-li"><i class="fa fa-check-square"></i></span>Html and CSS</li>
                        <li><span class="fa-li"><i class="fa fa-check-square"></i></span>Bootstrap</li>
                        <li><span class="fa-li"><i class="fa fa-check-square"></i></span>JavaScript functions</li>
                        <li><span class="fa-li"><i class="fa fa-check-square"></i></span>JavaScript Loops with nested "if" statements</li>
                        <li><span class="fa-li"><i class="fa fa-check-square"></i></span>JavaScript input validation</li>
                        <li><span class="fa-li"><i class="fa fa-check-square"></i></span>Html table template literals</li>
                    </ul>
                    <div>
                        <a href="/app.html" type="button" class="btn btn-outline-dark btn-lg px-4 me-md-2">Try It
                            Out!</a>
                    </div>
                    <h5 class="fw-bold mt-5">
                        <div class="d-flex">
                            <div class="row row-cols-2 row-cols-lg-4">
                                <div class="col"><i class="fa fa-js-square fa-3x jsIcon"></i></div>
                                <div class="col"><i class="fa fa-bootstrap fa-3x bsIcon"></i></div>
                                <div class="col"><i class="fa fa-html5 fa-3x html5Icon"></i></div>
                                <div class="col"><i class="fa fa-css3-alt fa-3x cssIcon"></i></div>
                            </div>
                        </div>
                    </h5>
                </div>
                <div class="col">
                    <img src="" alt="" 
                    class="img-fluid center-block d-block mx-auto mt-5">
                    <a class="imageAttrib d-flex justify-content-center mt-4" href=""
                        title=""></a>
                </div>
            </div>
        </div>
    </main>
